<form method="post" action="{{ path('lord_delete', {'id': lord.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lord.id) }}">
    <button class="btn">Delete</button>
</form>
